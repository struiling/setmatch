          ga('create', 'UA-47884871-1', 'setmatch.es');
          ga('send', 'pageview');
        </script>

  	</head>
  	<body>
        <div class="contain-to-grid">
      		<nav class="top-bar" data-topbar>
                <ul class="title-area">
                    <li class="name">
                      <h1><a href="/">{Set}Match</a></h1>
                    </li>
                    <li class="toggle-topbar menu-icon"><a href="#">Menu</a></li>
                </ul>
                <section class="top-bar-section">
                    <!-- Right Nav Section -->
                    <ul class="right">
                        
                        <% if (Parse.User.current()) { %>
                        <li class="has-dropdown">
                            <a href="/profile/"><img src="<%= basicUser.get("gravatar") %>?s=40&d=identicon" />
                                <%= basicProfile.get("t_" + settings.global.fname) %>
                                <%= basicProfile.get("t_" + settings.global.lname) %></a>
                            <ul class="dropdown">
                                <li><a href="/profile/edit">Edt profile</a></li>
                                <li><a href="/logout">Logout</a></li>
                            </ul>
                        </li>
                        <li class="has-dropdown">
                            <a href="/groups">Groups</a>
                            <ul class="dropdown">
                                <% _.each(basicGroups, function(group, i) { %>
                                    <li><a href="/group/<%= group.get("slug") %>"><%= group.get("name") %></a></li>
                                <% } ) %>
                                <li><a href="/group/new">+ new group</a></li>
                            </ul>
                        </li>
                        <% } %>
                    </ul>

                </section>
            </nav>
        </div>

        <div class="row">
            <div id="main">

                <% include flashify %>

        		<%- body %>
            </div>
        </div> <!-- /.row -->
        <div class="row">
    		<footer>
    			<p>&copy; <%= copyrightDate() %></p>
    		</footer>
        </div> <!-- /.row -->
        <script src="//code.jquery.com/jquery-1.11.0.min.js"></script>
