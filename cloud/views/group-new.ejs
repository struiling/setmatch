
<form method="post" action="/group/create">
    <fieldset>
        <legend>New group</legend>

        <label for="name">Name</label>
        <input name="name" type="text" placeholder="Name">

        <label for="urlName">URL</label>
        <input name="urlName" type="text" placeholder="URL">

        <label for="description">Description</label>
        <input name="description" type="textarea" placeholder="Description">
        <br />
        <input name="secretive" type="hidden" value="n"> 
        <input name="secretive" type="checkbox" value="y"> 
        <label for="secretive">Prevent members of this group to view other members (not recommended)</label>

        <input class="button" type="submit" value="Create new group">
    </fieldset>
</form>
