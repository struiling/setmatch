
<% if (typeof(error) !== 'undefined') { %>
	<p><%= error %></p>
	<p><%= errorParseMessage %></p>
<% } %>
<% if (typeof(message) !== 'undefined') { %>
	<p><%= message %></p>
<% } %>
<h2>Profile data</h2>

<%- JSON.stringify(profile) %>
<br />
**<% _.each(_.keys(profile.attributes), function(key) { %>
<%= key + ": " + profile.get(key) %>
<% }) %>**

<p>Email</p>
<%- user.getEmail() %>

